<Window x:Class="Digifly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		  Title="Digifly" UseLayoutRounding="True" MinHeight="563" MinWidth="550"
		  DataContext="{Binding Path=MainViewModel, Source={StaticResource ViewModelLocator}}"
		  >
	<DockPanel>
		<StatusBar DockPanel.Dock="Bottom">

			<StatusBarItem ToolTip="Time">
				<StackPanel>
					<TextBlock Text="{Binding Path=StatusTime, Converter={StaticResource DateConverter}, ConverterParameter=T}" />
				</StackPanel>
			</StatusBarItem>

			<StatusBarItem ToolTip="Status">
				<StackPanel>
					<TextBlock Text="{Binding Path=StatusText}" />
				</StackPanel>
			</StatusBarItem>



		</StatusBar>


		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50" ></ColumnDefinition>
				<ColumnDefinition Width="50" ></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="1">

			</StackPanel>
			<StackPanel Grid.Column="1">

			</StackPanel>


		</Grid>

		<StackPanel>

		</StackPanel>
	</DockPanel>
</Window>
